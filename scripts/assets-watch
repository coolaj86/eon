#!/usr/bin/env node

var path = require('path');
var { spawn } = require('child_process');

var cmd = 'npm ci; npx webpack --config webpack.development.js --watch --color';

spawn(cmd, {
  env: {
    PATH: process.env.PATH
  },
  shell: true,
  stdio: ['inherit', 'inherit', 'inherit'],
  cwd: path.resolve(__dirname, '..')
});
